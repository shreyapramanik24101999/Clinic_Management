@model Clinic_MVC.Models.TBLUserInfo

@{
    ViewBag.Title = "Login";

}
<link rel="stylesheet" href="~/CSS/login.css">
<div class="nav">
    <div class="left logo">
        <img src="~/Images/logo2.jpg" />
    </div>
    <div class="middle">
        <h2>Happy Life Health Care Center </h2>
    </div>
    <div><a href="~/Appointments/Login">Admin Section</a></div>
</div>
<div class="links">
    <div>
        @*@Html.ActionLink("Back to List", "Index")*@
        <a href="~/Home/Index" class="btn btn-primary">Back to Home</a>
    </div>
    <div></div>

</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center><h3 style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">User Login</h3></center>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <center>
            <div class="form-group">
                @Html.LabelFor(model => model.UsernameUs, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UsernameUs, new { htmlAttributes = new { @class = "form-control" },autocomplete="off" })
                    @Html.ValidationMessageFor(model => model.UsernameUs, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" }, autocomplete = "off" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>



            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Login" class="btn btn-success" />
                </div>

            </div>


        </center>
    </div>

}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <label>@ViewBag.Notification</label>
    </div>
    <div class="col-md-offset-2 col-md-10">
        <label>@ViewBag.msg</label>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}